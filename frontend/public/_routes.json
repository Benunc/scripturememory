{
  "version": 1,
  "include": ["/*"],
  "exclude": ["/assets/*", "/images/*"],
  "routes": [
    {
      "src": "/auth/verify",
      "dest": "/index.html",
      "status": 200
    },
    {
      "src": "/auth/.*",
      "dest": "/index.html",
      "status": 200
    },
    {
      "src": "/verses/.*",
      "dest": "/index.html",
      "status": 200
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ]
} 